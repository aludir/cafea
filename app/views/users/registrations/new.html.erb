<%= devise_error_messages! %>
<div class="container">
	<div class="col-md-3 col-md-offset-4">

		<h2>Sign up</h2>
		
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		
		  <div class="field"><%= f.label :email %><br />
		  <%= f.email_field :email, :autofocus => true, class: 'form-control'  %></div>
		
		  <div class="field"><%= f.label :password %><br />
		  <%= f.password_field :password, class: 'form-control'  %></div>
		
		  <div class="field"><%= f.label :password_confirmation %><br />
		  <%= f.password_field :password_confirmation, class: 'form-control'  %></div>
		  
		  <div class="field">
		    <%= f.label :name %><br>
		    <%= f.text_field :name, class: 'form-control'  %>
		  </div>
		  <div class="field">
		    <%= f.label :surname %><br>
		    <%= f.text_field :surname, class: 'form-control'  %>
		  </div>
		  
		  <div class="field">
		  	<%= f.label :gender %><br>
            <%= f.select :gender, options_for_select([[nil, 0],['male', 1],['female', 2],['other',3]]), class: 'form-control' %>
          </div><br/>
        
		  <div class="field">
		    <%= f.label :old_surname %><br>
		    <%= f.text_field :old_surname, class: 'form-control'  %>
		  </div>
		  <div class="field">
		    <%= f.label :nickname %><br>
		    <%= f.text_field :nickname, class: 'form-control'  %>
		  </div>
		  
		  <div class="field">
		    <%= f.label :birth_date %><br>
		    <%= f.text_field :birth_date, class: 'form-control generic_date_picker', 'data-provider' => 'datepicker' %>
		  </div><br/>
		
		  <div><%= f.submit "Sign up", class: 'btn btn-success'  %>
		  	<%= render "devise/shared/links" %>
		  	</div>
		<% end %>
	</div>
</div>
