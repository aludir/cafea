<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name+' '+user.surname, "/users/#{user.uuid}" %></td>
        <% if user.id == current_user.id %>
          <td><%= link_to 'Edit', edit_user_registration_path %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

