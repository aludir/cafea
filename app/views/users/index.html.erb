<%= link_to "Sign-out", destroy_user_session_path, method: :delete %>
<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name+' '+user.surname, user %></td>
        <% if user.id == current_user.id %>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

