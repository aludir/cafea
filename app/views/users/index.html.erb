<%= link_to "Sign-out", destroy_user_session_path, method: :delete %>
<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name+' '+user.surname, "/users/#{user.uuid}" %></td>
        <% if user.id == current_user.id %>
          <td><%= link_to 'Edit', edit_user_registration_path %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="container" ng-controller="IndexCtrl">
  <div class="row" ng-repeat="post in data.posts">
    <h2>{{post.title}}</h2>
    <p>{{post.contents}}</p>
  </div>
</div>

<br>
