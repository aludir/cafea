<div class="row form-inline" id="new_experience">
	<%= form_for @experience, url: experiences_path do |e| %>
		<%= e.label 'title:' %><%= e.text_field :title, class: 'form-control' %>
		<%= e.label 'company:' %><%= e.collection_select(:company_id, Company.all, :id, :name,{class: 'form-control'}) %>
		<%= e.label 'start date:' %><%= e.text_field :start_date, class: 'form-control' %>
		<%= e.label 'end date:' %><%= e.text_field :end_date, class: 'form-control' %>
		<%= e.label 'field of work:' %><%= e.text_field :field_of_work, class: 'form-control' %>
		<%= e.label 'city:' %><%= e.collection_select(:city_id, City.all, :id, :name,{class: 'form-control'}) %>
		<%= e.label 'country:' %><%= e.collection_select(:country_id, Country.all, :id, :name,{class: 'form-control'}) %>
		<%= e.label 'description:' %><%= e.text_field :description, class: 'form-control' %>
		<button class='btn btn-danger' type="button" id="cancel">Cancel</button>
		<%= e.hidden_field :user_id, {value: current_user.id}%>
		<%= e.submit 'Add!', class: 'form-control btn btn-success'%>
	<% end %>
</div>
