<%= devise_error_messages! %>
<div class="container">
	<div class="col-md-3 col-md-offset-4">

		<h2>Sign up</h2>
		
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		
		  <div class="field"><%= f.label :email %><br />
		  <%= f.email_field :email, :autofocus => true, class: 'form-control'  %></div>
		
		  <div class="field"><%= f.label :password %><br />
		  <%= f.password_field :password, class: 'form-control'  %></div>
		
		  <div class="field"><%= f.label :password_confirmation %><br />
		  <%= f.password_field :password_confirmation, class: 'form-control'  %></div>
		  
		  <div class="field">
		    <%= f.label :name %><br>
		    <%= f.text_field :name, class: 'form-control'  %>
		  </div>
		  <div class="field">
		    <%= f.label :surname %><br>
		    <%= f.text_field :surname, class: 'form-control'  %>
		  </div>
		  <div class="field">
		    <%= f.label :old_surname %><br>
		    <%= f.text_field :old_surname, class: 'form-control'  %>
		  </div>
		  <div class="field">
		    <%= f.label :nickname %><br>
		    <%= f.text_field :nickname, class: 'form-control'  %>
		  </div>
		  <div class="field">
		    <%= f.label :birth_date %><br>
		    <%= f.date_select("birth_date", start_year: 1940, include_blank: true, default: nil, class: 'form-control' )%>
		  </div><br/>
		
		  <div><%= f.submit "Sign up", class: 'btn btn-success'  %>
		  	<%= render "devise/shared/links" %>
		  	</div>
		<% end %>
	</div>
</div>
